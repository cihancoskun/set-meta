<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>@ViewBag.Title - Set Meta</title>
    <link rel="shortcut icon" href="/public/img/favicon.ico" />
    <link rel="stylesheet" href="/public/css/boot.css?v=1" />
    <link rel="stylesheet" href="/public/css/app.css?v=1" />
</head>
<body>
    <div class="navbar navbar-default">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse"><span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span></button>
            <a class="navbar-brand" href="/">Set Meta</a>
        </div>
        <div class="navbar-collapse collapse navbar-responsive-collapse">
            <ul class="nav navbar-nav">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">@Html.LocalizationString("menu_products") <b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li><a href="/product/new">@Html.LocalizationString("link_product_new")</a></li>
                        <li><a href="/product/list">@Html.LocalizationString("link_product_list")</a></li>
                        <li class="divider"></li>
                    </ul>
                </li>


            </ul>
            <form class="navbar-form navbar-left"><input type="text" class="form-control col-lg-8" placeholder="@Html.LocalizationString("search")"></form>
            <ul class="nav navbar-nav navbar-right">
                <li><a href="/lang/change/tr"><img src="/public/img/flag/tr.png" alt="Türkçe" /></a></li>
                <li><a href="/lang/change/en"><img src="/public/img/flag/en.png" alt="English"></a></li>
                <li><a href="/home/help">@Html.LocalizationString("menu_help")</a></li>
                <li><a href="/home/contact">@Html.LocalizationString("menu_contact")</a></li>

                @if (User.Identity.IsAuthenticated)
                {
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">@Html.LocalizationString("menu_settings") <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li><a href="#">@Html.LocalizationString("profile")</a></li>
                            <li class="divider"></li>
                        </ul>
                    </li>
                }
                else
                {
                    <li><a href="/user/login">@Html.LocalizationString("menu_login")</a></li>
                    <li><a href="/user/new">@Html.LocalizationString("menu_signup")</a></li>
                }

            </ul>
        </div><!-- /.nav-collapse -->
    </div>
    <div style="padding: 3px;">
        @RenderBody()
        <div class="clearfix"></div>
        <footer style="padding: 3px;"><hr /><p>&copy; @DateTime.Now.Year - Argeset Yazılım</p></footer>
    </div>

    <div id="feedback"><input type="button" class="btn btn-info" data-toggle="modal" data-target="#modalFeedback" value="@Html.LocalizationString("btn_open_feedback_popup")" /></div>
    <div class="modal fade" id="modalFeedback">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">@Html.LocalizationString("feedback_popup_title")</h4>
                </div>
                <div class="modal-body">
                    <div id="wrnFeedback"></div>
                    <form name="frmFeedback" id="frmFeedback">
                        @if (!User.Identity.IsAuthenticated)
                        {
                            <div class="form-group">
                                <label for="feedbackEmail">@Html.LocalizationString("email")</label>
                                <input type="email" class="form-control" id="feedbackEmail" name="feedbackEmail" />
                            </div>
                        }
                        <div class="form-group">
                            <label for="txtFeedback">@Html.LocalizationString("feedback")</label>
                            <textarea id="txtFeedback" name="txtFeedback" class="form-control"></textarea>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-default" data-dismiss="modal">@Html.LocalizationString("btn_cancel")</button>
                    <button class="btn btn-primary" id="btnSaveFeedback" name="btnSaveFeedback">@Html.LocalizationString("btn_save")</button>
                </div>
            </div>
        </div>
    </div><!-- /.modal -->
    @Html.AntiForgeryToken()
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.0/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.11.1/jquery.validate.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.0.3/js/bootstrap.min.js"></script>
    <script src="/public/js/app.js?v=1"></script>
    @RenderSection("Script", false)
</body>
</html>