@model PageViewModel<FeedbackViewModel>

@{
    ViewBag.Title = Html.LocalizationString("all_feed_backs_title");
}

<h3>@ViewBag.Title</h3>
<hr />

<div class="table-responsive">
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th></th>
                <th>@Html.LocalizationString("feed_back_owner_email")</th>
                <th>@Html.LocalizationString("feed_back_info")</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                var val = item.IsActive ? Html.LocalizationString("btn_deactivate") : Html.LocalizationString("btn_activate");
                var buttonCss = item.IsActive ? "btn-warning" : "btn-success";
                <tr>
                    <td>
                        <a class="btn btn-sm @buttonCss btnAction" data-toggle="modal" href="#DeactivateModal" data-id="@item.Id" data-isactive="@item.IsActive">@val</a>
                    </td>
                    <td>@item.Email</td>
                    <td><a href="/app/detail/@item.Id">@item.Info</a></td>
                </tr>
            }
            @{
                if (Model.HasNextPage || Model.HasPrevPage)
                {
                    <tr>
                        <td colspan="6" align="center">
                            <ul class="pagination">
                                @if (Model.HasPrevPage)
                                {
                                    <li><a href="~/admin/apps/@(Model.PageNumber - 1)">&laquo;</a></li>
                                }
                                <li><a href="~/admin/apps/@(Model.PageNumber)">@(Model.PageNumber)</a></li>
                                @if (Model.HasNextPage)
                                {
                                    <li><a href="~/admin/apps/@(Model.PageNumber + 1)">&raquo;</a></li>
                                }
                            </ul>
                            <br />
                            <span class="label label-primary">@Html.LocalizationString("total_page_count") : @Model.PageCount</span>
                        </td>
                    </tr>
                }
            }  
        </tbody>
    </table>
    @Html.AntiForgeryToken()
</div>
<div class="modal fade" id="DeactivateModal" tabindex="-1" role="dialog" aria-labelledby="lblDeactivateModal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">@Html.LocalizationString("modal_title_apps")</h4>
            </div>
            <div class="modal-body">
                @Html.LocalizationString("modal_body_apps")
            </div>
            <div class="modal-footer">
                <input type="button" class="btn btn-default" data-dismiss="modal" value="@Html.LocalizationString("btn_cancel")" />
                <input type="button" class="btn" value="@Html.LocalizationString("btn_ok")" id="btnModalAction" data-id="" data-isactive="" />
            </div>
        </div>
    </div>
</div>

@section script
{
    <script>
        $(function() {
            var textActivate = "@Html.LocalizationString("btn_activate")";
            var textDeactivate = "@Html.LocalizationString("btn_deactivate")";

            $("input#btnModalAction").click(function() {
                var id = $(this).data(textId);
                var isActive = $(this).data(textIsActive);

                $.ajax({
                    url: "/App/ChangeStatus",
                    type: "POST",
                    data: "id=" + id + "&isActive=" + isActive + "&__RequestVerificationToken=" + $('input[name="__RequestVerificationToken"]').val(),
                    success: function(r) {
                        if (r && r.Ok) {
                            if (isActive) {
                                $("a[data-id='" + id + "']").removeClass("btn-warning")
                                                            .addClass("btn-success")
                                                            .data("isactive", false)
                                                            .html(textActivate);
                            } else {
                                $("a[data-id='" + id + "']").removeClass("btn-success")
                                                            .addClass("btn-warning")
                                                            .data("isactive", true)
                                                            .html(textDeactivate);
                            }

                            $("#DeactivateModal").modal('hide');

                        } else {
                            //warning
                        }
                    }
                });
            });
        });
    </script>
}

